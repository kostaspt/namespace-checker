{
    "name": "kostaspt/php-ns-fixer",
    "description": "Find wrong namespaces in your PHP projects",
    "type": "application",
    "license": "MIT",
    "keywords": ["namespace"],
    "version": "2.0.0",
    "authors": [
        {
            "name": "Konstantinos Pittas",
            "email": "konstantinos.pittas@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "jean85/pretty-package-versions": "^1.2",
        "spatie/regex": "^1.4",
        "symfony/console": "^4.2",
        "symfony/event-dispatcher": "^4.2",
        "symfony/finder": "^4.2",
        "tightenco/collect": "^6.0.0"
    },
    "require-dev": {
        "localheinz/phpstan-rules": "^0.12.1",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-deprecation-rules": "^0.11.0",
        "phpstan/phpstan-strict-rules": "^0.11.0",
        "phpunit/phpunit": "^8.1",
        "spatie/phpunit-snapshot-assertions": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "PhpNsFixer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpNsFixer\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/php-ns-fixer"
    ],
    "scripts": {
        "format": "prettier --print-width 120 --write './src/**/*.php'; prettier --print-width 120 --write './tests/**/*.php'",
        "stan": "phpstan analyze -l max src",
        "test": "phpunit -c phpunit.xml.dist"
    },
    "config": {
        "sort-packages": true
    }
}
